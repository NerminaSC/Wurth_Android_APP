    <style name="label_value" parent="@android:style/Widget.TextView">
        <!--item name="android:background">@drawable/border_bottom_thin</item-->
        <item name="typeface">Roboto-Condensed.ttf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
