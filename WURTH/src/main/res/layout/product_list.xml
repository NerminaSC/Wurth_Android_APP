<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:id="@+id/llFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/bg_filter"
        android:visibility="gone"
        android:padding="8dp">

        <ba.wurth.mb.Classes.TypefacedEditText
            style="@style/textbox"
            android:id="@+id/txbSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_marginLeft="0dp"
            android:hint="@string/Search"
            android:textSize="@dimen/TextSizeMicro"
            android:text=""/>

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/dark_backspace"
            android:background="#00000000" />

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="#E7E7E7"
        android:fastScrollEnabled="true"
        android:layout_above="@+id/llTotals"
        android:layout_below="@+id/llFilter"/>

    <TableLayout
        android:id="@+id/llNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10sp"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="x"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge"
                 />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/BackAlt"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/NextAlt"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeLarge" />
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llTotals"
        android:gravity="center"
        android:background="@drawable/bg_main"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTotals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_filter"
        android:visibility="visible"
        android:layout_above="@id/llNumbers"
        android:padding="8dp">


        <ba.wurth.mb.Classes.TypefacedTextView
            app:typeface="Roboto-Light"
            android:id="@+id/litItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:hint=""
            android:gravity="left|center_vertical"
            android:contentDescription="0"
            android:textColor="#000000"
            android:textSize="@dimen/textSizeSmall"
            android:text=""/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:orientation="vertical">

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto-Light"
                android:id="@+id/litTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:hint=""
                android:contentDescription="0"
                android:textColor="#333333"
                android:textSize="@dimen/textSizeSmall"
                android:text=""/>

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto-Light"
                android:id="@+id/litGrandTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:hint=""
                android:contentDescription="0"
                android:textColor="#000000"
                android:textSize="@dimen/textSizeMedium"
                android:text=""/>

        </LinearLayout>

        <View android:layout_width="1dp" android:layout_margin="5dp" android:layout_height="match_parent" android:background="#666666" />

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dark_list"
            android:text="@string/Order"
            android:drawableLeft="@drawable/dark_list"
            android:padding="0dp"
            android:drawablePadding="0dp"
            android:textColor="#333333"
            android:background="#00000000" />

    </LinearLayout>

</RelativeLayout>
