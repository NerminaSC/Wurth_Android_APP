<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <ba.wurth.mb.Classes.TypefacedTextView
            app:typeface="Roboto-Condensed.ttf"
            style="@style/header"
            android:text="@string/Client_Signature" />

        <ba.wurth.mb.Classes.TypefacedTextView
            app:typeface="Roboto-Condensed.ttf"
            style="@style/label"
            android:text="@string/Client_Number" />

        <EditText
            android:id="@+id/txbClient_Number"
            style="@style/textbox"
            android:singleLine="true"
            android:gravity="left"
            android:text="" />

        <ba.wurth.mb.Classes.TypefacedTextView
            app:typeface="Roboto-Condensed.ttf"
            style="@style/label"
            android:text="@string/Client_Code" />

        <TextView
            android:id="@+id/txbClient_Code"
            style="@style/textbox"
            android:singleLine="true"
            android:gravity="left"
            android:text="" />

        <ba.wurth.mb.Classes.TypefacedTextView
            app:typeface="Roboto-Condensed.ttf"
            style="@style/label"
            android:text="@string/Password" />

        <EditText
            android:id="@+id/txbPassword"
            style="@style/textbox"
            android:inputType="textPassword"
            android:singleLine="true"
            android:gravity="left"
            android:text="" />

    </LinearLayout>

    <ba.wurth.mb.Classes.TypefacedTextView
        app:typeface="Roboto-Condensed.ttf"
        style="@style/header"
        android:text="@string/Signature" />

    <android.gesture.GestureOverlayView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:eventsInterceptionEnabled="true"
        android:fadeEnabled="false"
        android:gestureColor="@color/black"
        android:gestureStrokeLengthThreshold="0.1"
        android:gestureStrokeType="multiple"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#333333">

        <ba.wurth.mb.Classes.TypefacedButton
            app:typeface="Roboto-Condensed.ttf"
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="#00000000"
            android:drawableLeft="@drawable/light_accept"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSizeSmall"
            android:text="@string/Update"
            android:visibility="visible"/>

        <View style="@style/separator" android:layout_margin="5dp" />

        <ba.wurth.mb.Classes.TypefacedButton
            app:typeface="Roboto-Condensed.ttf"
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="#00000000"
            android:drawableLeft="@drawable/light_cancel"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSizeSmall"
            android:text="@string/Cancel"
            android:visibility="visible"/>

    </LinearLayout>    
    
</LinearLayout>

