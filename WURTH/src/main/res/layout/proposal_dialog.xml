<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:id="@+id/scrollView1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="RobotoCondensed-Bold.ttf"
                style="@style/label"
                android:id="@+id/lblProductName"
                android:singleLine="false"
                android:textColor="#111111"
                android:textSize="@dimen/textSizeMedium"
                android:text=""
                android:gravity="left"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView style="@style/label_dialog" android:text="@string/Name" android:layout_marginTop="0dp" />
                <EditText style="@style/textbox_dialog" android:id="@+id/lblName" android:layout_marginTop="0dp" android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    style="@style/CheckBox_01"
                    android:id="@+id/chkOpenedProposal"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/OpenedProposal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView style="@style/label_dialog" android:text="@string/From" android:layout_marginTop="0dp" />
                <EditText
                    style="@style/textbox_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txbStartDate"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView style="@style/label_dialog" android:text="@string/To" android:layout_marginTop="0dp" />
                <EditText
                    style="@style/textbox_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txbToDate"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTable"
                android:background="#999999"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="25dp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <ba.wurth.mb.Classes.TypefacedTextView app:typeface="Roboto.ttf" style="@style/label_dialog" android:text="@string/Note" android:visibility="visible" />
                <EditText style="@style/textbox_dialog" android:layout_height="100dp" android:layout_marginLeft="0dp" android:inputType="text" android:id="@+id/txbNote" android:singleLine="false" android:visibility="visible" android:gravity="left|top" android:focusable="true" android:focusableInTouchMode="true" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:background="#333333">

            <ba.wurth.mb.Classes.TypefacedButton
                app:typeface="Roboto-Condensed.ttf"
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="#00000000"
                android:drawableLeft="@drawable/light_accept"
                android:padding="5dp"
                android:drawablePadding="0dp"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeSmall"
                android:text="@string/Update"
                android:visibility="visible"/>

            <View style="@style/separator" android:layout_margin="5dp" />

            <ba.wurth.mb.Classes.TypefacedButton
                app:typeface="Roboto-Condensed.ttf"
                android:id="@+id/btnCloseDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="#00000000"
                android:drawableLeft="@drawable/light_cancel"
                android:padding="5dp"
                android:drawablePadding="0dp"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSizeSmall"
                android:text="@string/Cancel"
                android:visibility="visible"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>