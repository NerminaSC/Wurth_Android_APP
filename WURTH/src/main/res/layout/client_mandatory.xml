<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llActions">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp">

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/PDVNumber" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litPDVNumber"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/IDNumber" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litIDNumber"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/CourtRegister" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litCourtRegister"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/CourtRegisterNumber" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litCourtRegisterNumber"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/TypeOfBusiness" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litTypeOfBusiness"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/SourceOfTypeBusiness" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litSourceOfTypeBusiness"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/Bank" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litBank"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/BankNumber1" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litBankNumber1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/BankNumber2" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litBankNumber2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/BankNumber3" />

            <ba.wurth.mb.Classes.TypefacedEditText
                style="@style/label_textbox_readonly"
                android:focusable="true"
                android:id="@+id/litBankNumber3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:hint="" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
