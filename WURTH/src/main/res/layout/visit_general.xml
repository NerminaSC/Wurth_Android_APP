<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp">

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto-Light.ttf"
                style="@style/header"
                android:text="@string/Visit_PleaseSetProperties"/>

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto-Light.ttf"
                style="@style/label"
                android:text="@string/Users"/>

            <Spinner
                android:id="@+id/spUsers"
                style="@style/Spinner_01" />

            <ba.wurth.mb.Classes.TypefacedTextView
                style="@style/label"
                android:text="@string/Client" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <AutoCompleteTextView
                    android:id="@+id/txbClients"
                    style="@style/textbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="0"
                    android:ems="10" />

                <ImageButton
                    android:id="@+id/btnClearClients"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/dark_backspace"
                    android:background="#00000000" />

            </LinearLayout>

            <ba.wurth.mb.Classes.TypefacedTextView
                app:typeface="Roboto.ttf"
                style="@style/label"
                android:text="@string/DeliveryPlace"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/txbDeliveryPlaces"
                    style="@style/textbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="0"
                    android:ems="10" />

                <ImageButton
                    android:id="@+id/btnClearDeliveryPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/dark_backspace"
                    android:background="#00000000" />

            </LinearLayout>

            <ba.wurth.mb.Classes.TypefacedTextView
                style="@style/label"
                android:text="@string/Visit_StartedAt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ba.wurth.mb.Classes.TypefacedTextView
                    style="@style/textbox"
                    android:focusable="false"
                    android:id="@+id/litStartDate"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:hint="@string/Date" />

                <ba.wurth.mb.Classes.TypefacedTextView
                    style="@style/textbox"
                    android:focusable="false"
                    android:id="@+id/litStartTime"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:hint="@string/Time" />

            </LinearLayout>


            <ba.wurth.mb.Classes.TypefacedTextView
                style="@style/label"
                android:text="@string/Visit_EndedAt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ba.wurth.mb.Classes.TypefacedTextView
                    style="@style/textbox"
                    android:focusable="false"
                    android:id="@+id/litEndDate"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:hint="@string/Date" />

                <ba.wurth.mb.Classes.TypefacedTextView
                    style="@style/textbox"
                    android:focusable="false"
                    android:id="@+id/litEndTime"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:hint="@string/Time" />

            </LinearLayout>

            <TextView
                style="@style/label"
                android:text="@string/Visit_Type" />

            <Spinner
                android:id="@+id/spType"
                style="@style/Spinner_01" />

            <TextView
                style="@style/label"
                android:text="@string/Visit_Reason" />

            <Spinner
                android:id="@+id/spReason"
                style="@style/Spinner_01" />

            <TextView
                style="@style/label"
                android:text="@string/Visit_Action" />

            <Spinner
                android:id="@+id/spAction"
                style="@style/Spinner_01" />

            <ba.wurth.mb.Classes.TypefacedTextView
                style="@style/label"
                android:text="@string/Details" />

            <EditText
                android:id="@+id/txbNote"
                style="@style/textbox"
                android:layout_height="250dp"
                android:gravity="left|top"
                android:singleLine="false"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
