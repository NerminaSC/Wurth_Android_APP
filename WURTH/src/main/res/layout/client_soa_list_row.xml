<?xml version="1.0" encoding="utf-8"?>

<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:id="@+id/table">

    <ba.wurth.mb.Classes.TypefacedTextView
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litOU"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litDescription"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litNumber"
        android:gravity="left"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litDate"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litDueDate"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litAmountToPay"
        android:gravity="right"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litAmountClosed"
        android:gravity="right"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litAmountOpen"
        android:gravity="right"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <ba.wurth.mb.Classes.TypefacedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:typeface="Roboto-Light.ttf"
        android:id="@+id/litExceededDays"
        android:gravity="right"
        android:text=""
        android:textSize="@dimen/TextSizeMicro"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true" />


</TableRow>

